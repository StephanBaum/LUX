      <!-- Image container - outside accordion -->
      <div class="subpage-section__image is-visible" data-accordion-image-target>
        <img src="/Assets/img/image 1.png" alt="" loading="lazy">
      </div>
    </div>
  </section>

  <!-- Image Slider -->
  <section class="slider">
    <div class="slider__cursor">
      <svg class="slider__cursor-svg" viewBox="0 0 80 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <line class="slider__cursor-line" x1="16" y1="12" x2="64" y2="12" stroke="black" stroke-width="1.5"/>
        <path class="slider__cursor-head slider__cursor-head--left" d="M16 12L24 5M16 12L24 19" stroke="black" stroke-width="1.5" stroke-linecap="round"/>
        <path class="slider__cursor-head slider__cursor-head--right" d="M64 12L56 5M64 12L56 19" stroke="black" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="slider__container grid">
      <div class="slider__drag-hint">
        <svg class="slider__drag-arrow" viewBox="0 0 40 10" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 5H38M38 5L33 1M38 5L33 9" stroke="currentColor" stroke-width="1"/>
        </svg>
        <span class="slider__drag-text">Workshops</span>
      </div>
    </div>
    <div class="slider__track-wrapper">
      <div class="slider__track" data-slider-track>
        <div class="slider__slide">
          <img src="/Assets/img/image 1.png" alt="" draggable="false" decoding="async">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 2.png" alt="" draggable="false" decoding="async">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 3.png" alt="" draggable="false" decoding="async">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 4.png" alt="" draggable="false" decoding="async">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 5.png" alt="" draggable="false" decoding="async">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 6.png" alt="" draggable="false" decoding="async">
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta" data-parallax="0.15">
    <div class="cta__container grid">
      <h2 class="cta__title" data-animate="fade-up" data-i18n="cta.title">Anfragen</h2>
      <div class="cta__content">
        <p class="cta__text" data-animate="text-reveal" data-i18n="cta.text">Quisque eu purus convallis, gravida. Mentum mauris vitae, consectetur orci. Cras volutpat eget elit porta facilisis. Aenean fermentum arcu mauris, eu faucibus nisl blandit ac. Proin eget euismod mauris.</p>
        <a href="/kontakt" class="cta__link" data-animate="fade-up">
          <svg class="cta__arrow" viewBox="0 0 55 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 8H53M53 8L46 1M53 8L46 15" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span class="cta__link-text" data-i18n="cta.link">Kontakt</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Page-specific scripts -->
  <script src="../scripts/slider.js"></script>
  <script src="../scripts/accordion.js"></script>
</Base>
