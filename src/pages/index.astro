---
import Base from '../layouts/Base.astro';
---

<Base title="LUX Studio" extraStyles={['/styles/components/profile.css']}>
  <section class="hero">
    <!-- Floating images with parallax - positions via data attributes -->
    <div class="hero__images">
      <div class="hero__image"
           data-speed="1.2"
           data-top="15%"
           data-left="-5%"
           data-width="38vw"
           data-height="50vh">
        <img src="/Assets/img/image 0.png" alt="">
      </div>
      <div class="hero__image"
           data-speed="0.6"
           data-top="-10%"
           data-right="10%"
           data-width="35vw"
           data-height="40vh">
        <img src="/Assets/img/image 4.png" alt="">
      </div>
      <div class="hero__image"
           data-speed="1.5"
           data-bottom="-5%"
           data-left="5%"
           data-width="42vw"
           data-height="35vh">
        <img src="/Assets/img/image 6.png" alt="">
      </div>
      <div class="hero__image"
           data-speed="0.8"
           data-bottom="-10%"
           data-right="-5%"
           data-width="36vw"
           data-height="55vh">
        <img src="/Assets/img/image 7.png" alt="">
      </div>
    </div>

    <!-- Grid container for content -->
    <div class="hero__content grid">
      <!-- Navigation links - parallax speed calculated by index (first=fastest) -->
      <nav class="hero__nav">
        <a href="/veranstaltungen" class="hero__nav-link" data-img="/Assets/img/image 1.png">
          <span class="hero__nav-text" data-i18n="nav.veranstaltungen">Veranstaltung</span>
          <svg class="hero__nav-arrow" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M28 0V27H24V6.37305L3.17383 27.1016L0.351562 24.2666L20.7139 4H0V0H28Z" fill="currentColor"/>
          </svg>
        </a>
        <a href="/workshops" class="hero__nav-link" data-img="/Assets/img/image 3.png">
          <span class="hero__nav-text" data-i18n="nav.workshops">Workshops</span>
          <svg class="hero__nav-arrow" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M28 0V27H24V6.37305L3.17383 27.1016L0.351562 24.2666L20.7139 4H0V0H28Z" fill="currentColor"/>
          </svg>
        </a>
        <a href="/studio" class="hero__nav-link" data-img="/Assets/img/image 5.png">
          <span class="hero__nav-text" data-i18n="nav.studio">Studio</span>
          <svg class="hero__nav-arrow" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M28 0V27H24V6.37305L3.17383 27.1016L0.351562 24.2666L20.7139 4H0V0H28Z" fill="currentColor"/>
          </svg>
        </a>
        <a href="/mieten" class="hero__nav-link" data-img="/Assets/img/image 8.png">
          <span class="hero__nav-text" data-i18n="nav.mieten">Mieten</span>
          <svg class="hero__nav-arrow" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M28 0V27H24V6.37305L3.17383 27.1016L0.351562 24.2666L20.7139 4H0V0H28Z" fill="currentColor"/>
          </svg>
        </a>
      </nav>
    </div>

    <!-- Mouse-following image (hidden by default) -->
    <div class="cursor-image">
      <img src="" alt="">
    </div>
  </section>

  <!-- Image Slider -->
  <section class="slider">
    <!-- Custom cursor -->
    <div class="slider__cursor">
      <svg class="slider__cursor-svg" viewBox="0 0 80 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <line class="slider__cursor-line" x1="16" y1="12" x2="64" y2="12" stroke="black" stroke-width="1.5"/>
        <path class="slider__cursor-head slider__cursor-head--left" d="M16 12L24 5M16 12L24 19" stroke="black" stroke-width="1.5" stroke-linecap="round"/>
        <path class="slider__cursor-head slider__cursor-head--right" d="M64 12L56 5M64 12L56 19" stroke="black" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
    </div>
    <div class="slider__container grid">
      <!-- Drag indicator -->
      <div class="slider__drag-hint">
        <svg class="slider__drag-arrow" viewBox="0 0 40 10" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 5H38M38 5L33 1M38 5L33 9" stroke="currentColor" stroke-width="1"/>
        </svg>
        <span class="slider__drag-text" data-i18n="slider.hint">hier passiert.</span>
      </div>
    </div>

    <!-- Track sits at grid edge, extends off-screen -->
    <div class="slider__track-wrapper">
      <div class="slider__track" data-slider-track>
        <div class="slider__slide">
          <img src="/Assets/img/image 1.png" alt="" draggable="false">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 2.png" alt="" draggable="false">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 3.png" alt="" draggable="false">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 4.png" alt="" draggable="false">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 5.png" alt="" draggable="false">
        </div>
        <div class="slider__slide">
          <img src="/Assets/img/image 6.png" alt="" draggable="false">
        </div>
      </div>
    </div>
  </section>

  <!-- Full Width Copy Section -->
  <section class="full-width-copy" data-parallax="0.2">
    <div class="full-width-copy__container grid">
      <h2 class="full-width-copy__label" data-animate="fade-up" data-i18n="section_studio.label">Das Studio</h2>
      <p class="full-width-copy__text" data-animate="text-reveal" data-i18n="section_studio.text">Quisque eu purus convallis, gravida. Mentum mauris vitae, consectetur orci. Cras volutpat eget elit porta facilisis. Aenean fermentum arcu mauris, eu faucibus nisl blandit ac. Proin eget euismod mauris.</p>
    </div>
  </section>

  <!-- Profile Section -->
  <section class="profile" data-parallax="0.1">
    <div class="grid">
      <div class="profile__header" data-animate="fade-up">
        <p class="profile__breadcrumb" data-i18n="section_menschen.label">Die Menschen</p>
        <div class="profile__divider"></div>
      </div>

      <div class="profile__content">
        <div class="profile__text" data-animate="fade-up">
          <div class="profile__intro">
            <h2 class="profile__title" data-i18n="section_menschen.title">Untitled (Profile)</h2>
            <a href="mailto:hello@example.com" class="profile__email">hello@example.com</a>
            <a href="#" class="profile__social">Instagram</a>
          </div>

          <p class="profile__bio" data-i18n="section_menschen.bio">
            Cras ut dictum mi. Sed quis lorem semper, elementum mauris vitae, consectetur orci.
            Cras volutpat eget elit porta facilisis. Aenean fermentum arcu mauris, eu faucibus
            nisl blandit ac. Proin eget euismod mauris. Quisque vulputate mauris quis tellus
            ultrices euismod. Quisque eu purus convallis, gravida.
          </p>

          <div class="profile__section">
            <h3 class="profile__section-title" data-i18n="section_menschen.education_title">Expertise</h3>
            <div class="profile__education-item">
              <span class="profile__education-title" data-i18n="section_menschen.expertise1_title">Vestibulum Euismod (Ultrices)</span>
              <span class="profile__education-detail" data-i18n="section_menschen.expertise1_detail">Suspendisse Aenean Lec</span>
              <span class="profile__education-year" data-i18n="section_menschen.expertise1_year">2023</span>
            </div>
            <div class="profile__education-item">
              <span class="profile__education-title" data-i18n="section_menschen.expertise2_title">Aliquam Faucibus Tellus</span>
              <span class="profile__education-detail" data-i18n="section_menschen.expertise2_detail">Vestibulum Ultricies Suspendisse Aenean Vestibulum</span>
            </div>
          </div>
        </div>

        <div class="profile__gallery" data-animate="fade-up">
          <div class="profile__gallery-row profile__gallery-row--top">
            <div class="profile__image profile__image--landscape">
              <img src="/Assets/img/image 1.png" alt="" loading="lazy">
            </div>
            <div class="profile__image profile__image--portrait-sm">
              <img src="/Assets/img/image 2.png" alt="" loading="lazy">
            </div>
          </div>
          <div class="profile__gallery-row profile__gallery-row--bottom">
            <div class="profile__image profile__image--portrait-md">
              <img src="/Assets/img/image 3.png" alt="" loading="lazy">
            </div>
            <div class="profile__image profile__image--portrait-lg">
              <img src="/Assets/img/image 4.png" alt="" loading="lazy">
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta" data-parallax="0.15">
    <div class="cta__container grid">
      <h2 class="cta__title" data-animate="fade-up" data-i18n="cta.title">Anfragen</h2>
      <div class="cta__content">
        <p class="cta__text" data-animate="text-reveal" data-i18n="cta.text">Quisque eu purus convallis, gravida. Mentum mauris vitae, consectetur orci. Cras volutpat eget elit porta facilisis. Aenean fermentum arcu mauris, eu faucibus nisl blandit ac. Proin eget euismod mauris.</p>
        <a href="/kontakt" class="cta__link" data-animate="fade-up">
          <svg class="cta__arrow" viewBox="0 0 55 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 8H53M53 8L46 1M53 8L46 15" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span class="cta__link-text" data-i18n="cta.link">Kontakt</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Page-specific scripts -->
  <script is:inline src="/js/hero.js" slot="scripts"></script>
  <script is:inline src="/js/slider.js" slot="scripts"></script>
</Base>
